@model IMAGE_CRUD.Models.CustomUser

@{
    ViewData["Title"] = "signup";
}

<h1>signup</h1>

<h4>UserReg</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="signup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CUser.Username" class="control-label"></label>
                <input asp-for="CUser.Username" class="form-control" />
                <span asp-validation-for="CUser.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CUser.Useremail" class="control-label"></label>
                <input asp-for="CUser.Useremail" class="form-control" />
                <span asp-validation-for="CUser.Useremail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CUser.Userpass" class="control-label"></label>
                <input asp-for="CUser.Userpass" class="form-control" />
                <span asp-validation-for="CUser.Userpass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CUser.Userrole" class="control-label"></label>
                <select asp-for="CUser.Userrole" class ="form-control" asp-items="ViewBag.Userrole">
                    @foreach(var item in Model.CRoles)
                    {
                        <option value="@item.RoleId">@item.RoleName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="login">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
